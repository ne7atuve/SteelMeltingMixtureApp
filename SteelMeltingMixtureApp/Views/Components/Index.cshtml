@model IEnumerable<SteelMeltingMixture.Domain.Components>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Components", FormMethod.Post))
{
    <button type="submit" name="action" value="ClearTable">Очистить таблицу</button>
    <button type="submit" name="action" value="LoadTable">Заполнить таблицу</button>
    <p>
    </p>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameComponent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MinValComponent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxValComponent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsSolve)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameComponent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinValComponent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxValComponent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSolve)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID_Component }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID_Component }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID_Component })
            </td>
        </tr>
    }

</table>
